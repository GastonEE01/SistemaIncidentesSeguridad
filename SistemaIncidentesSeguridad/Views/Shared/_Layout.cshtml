<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SistemaIncidentesSeguridad</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SistemaIncidentesSeguridad.layout.css" asp-append-version="true" />
</head>
<body>
    <header class="header">
        <div class="logo">
            <img class="logo-text" src="~/img/Logo.svg" alt="TicketSend Logo" class="logo" />
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            @if (Context.Session.GetInt32("UserRole") == 1)
            {
                <a class="navbar-brand" asp-area="" asp-controller="AdminGeneral" asp-action="Index">Dashboard</a>
            }
            else if (Context.Session.GetInt32("UserRole") == 2)
            {
                <a class="navbar-brand" asp-area="" asp-controller="AdminIntermedio" asp-action="Index">Dashboard</a>
            }
        </div>

        <div class="editor-text">
            @Context.Session.GetString("UserName")
            <a class="navbar-brand" asp-area="" asp-controller="Account" asp-action="Login">
                <img src="~/img/cerrarSesion.png" alt="Cerrar sesion" style="height:50px;width:;" />
            </a>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="names">
            <span class="member">Regina Sanchez </span>
            <span class="member">Agustin Cardelli</span>
            <span class="member">Gaston Estevez</span>
            <span class="member">Santiago Woscoff</span>
            <span class="member">Franco Coppola</span>
            <span class="member">Lautaro Desouches</span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
